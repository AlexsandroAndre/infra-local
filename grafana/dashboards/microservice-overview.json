{
  "title": "Microservice Overview",
  "uid": "microservice-overview",
  "schemaVersion": 36,
  "version": 1,
  "tags": ["microservice", "spring", "micrometer"],
  "panels": [
    {
      "type": "stat",
      "title": "Uptime (seconds)",
      "id": 1,
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "max(process_uptime_seconds)",
          "legendFormat": "uptime",
          "refId": "A"
        }
      ]
    },
    {
      "type": "graph",
      "title": "Requests per endpoint",
      "id": 2,
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(rate(http_server_requests_seconds_count[5m])) by (uri)",
          "legendFormat": "{{uri}}",
          "refId": "A"
        }
      ],
      "lines": true,
      "linewidth": 2
    },
    {
      "type": "graph",
      "title": "Latency per endpoint (p95)",
      "id": 3,
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_server_requests_seconds_bucket[5m])) by (le, uri))",
          "legendFormat": "{{uri}}",
          "refId": "A"
        }
      ],
      "lines": true,
      "linewidth": 2
    },
    {
      "type": "graph",
      "title": "HTTP 2xx vs 4xx vs 5xx",
      "id": 4,
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(rate(http_server_requests_seconds_count{status=~\"2..\"}[5m]))",
          "legendFormat": "2xx",
          "refId": "A"
        },
        {
          "expr": "sum(rate(http_server_requests_seconds_count{status=~\"4..\"}[5m]))",
          "legendFormat": "4xx",
          "refId": "B"
        },
        {
          "expr": "sum(rate(http_server_requests_seconds_count{status=~\"5..\"}[5m]))",
          "legendFormat": "5xx",
          "refId": "C"
        }
      ],
      "lines": true,
      "linewidth": 2
    }
  ],
  "time": {
    "from": "now-15m",
    "to": "now"
  }
}