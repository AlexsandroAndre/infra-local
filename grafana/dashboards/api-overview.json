{
  "title": "API Overview",
  "uid": "api-overview",
  "schemaVersion": 36,
  "version": 1,
  "tags": ["api", "spring", "micrometer"],
  "panels": [
    {
      "type": "stat",
      "title": "Requests per second (total)",
      "id": 1,
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(rate(http_server_requests_seconds_count[1m]))",
          "legendFormat": "RPS",
          "refId": "A"
        }
      ]
    },
    {
      "type": "graph",
      "title": "Request Latency (p95)",
      "id": 2,
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_server_requests_seconds_bucket[5m])) by (le))",
          "legendFormat": "p95",
          "refId": "A"
        }
      ],
      "lines": true,
      "linewidth": 2
    },
    {
      "type": "graph",
      "title": "HTTP 5xx Errors",
      "id": 3,
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(rate(http_server_requests_seconds_count{status=~\"5..\"}[5m]))",
          "legendFormat": "5xx",
          "refId": "A"
        }
      ],
      "lines": true,
      "linewidth": 2
    },
    {
      "type": "graph",
      "title": "HTTP 4xx Errors",
      "id": 4,
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(rate(http_server_requests_seconds_count{status=~\"4..\"}[5m]))",
          "legendFormat": "4xx",
          "refId": "A"
        }
      ],
      "lines": true,
      "linewidth": 2
    }
  ],
  "time": {
    "from": "now-15m",
    "to": "now"
  }
}